@using Demo1_ASP_MVC.Models.ContactModels
@model Demo1_ASP_MVC.Models.ViewModels.ContactVM.ListContactVM

<div class="container  row">
    <div class ="col-9 text-center ">
        <h1>Liste des contacts</h1>

        <a 
            class="btn btn-primary"
            asp-action="AddContact">
            Ajouter
        </a>


        @if (@Model.NbContact > 0)
            {

            <br />
            <h2>La liste contient @Model.NbContact contact@(@Model.NbContact > 1 ? "s" : "")</h2>  
            <br />
     
            <br />

            <ul class ="d-flex flex-wrap justify-content-center list-unstyled ">
                @foreach (Contact contact in Model.Contacts)
                {
                    <li class="m-4">
                        <div class =" p-2 border border-dark rounded-2 w-200">
                            <h2>N° : @contact.Id</h2>
                            <h2>Prénom : @contact.FirstName</h2>
                            <h2>Nom : @contact.LastName</h2>
                            <h2>Surnom : @contact.SurName</h2>
                            <h2>Téléphone : @contact.Phone</h2>
                            <h2>Email : @contact.Email</h2>
                            <h2>Date de naissance : @contact.Birthdate</h2>
                    
                            @if(contact.Follower == 0){
                                <a 
                                    class="btn btn-outline-success"
                                    asp-route-id="@contact.Id"
                                    asp-action="LoveContact">
                                    J'aime
                                </a>
                            }
                           
                     
                    
                            <a 
                                class="btn btn-danger"
                                asp-route-id="@contact.Id"
                                asp-action="DeleteContact">
                                Supprimer
                            </a>
                            <a 
                                class="btn btn-warning"
                                asp-route-id=@contact.Id
                                asp-action="ModifyContact">
                                Modifier
                            </a>
                        </div>
                    </li>  
        
           
                }
            </ul>

        }

    </div>

    <div class ="col-3 text-center border-dark border-start">
         <h1>Liste de mes preferences</h1>
        <ul class ="d-flex flex-wrap justify-content-center list-unstyled ">
            @foreach (Contact contact in Model.Contacts)
            {
                if(contact.Follower == contact.Id)
                {
                    <li class="m-4">
                        <div class =" p-2 border border-dark rounded-2 w-200">
                            <h4>N° : @contact.Id</h4>
                            <h4>Prénom : @contact.FirstName</h4>
                            <h4>Nom : @contact.LastName</h4>
                            <h4>Surnom : @contact.SurName</h4>
                            <h4>Téléphone : @contact.Phone</h4>
                            <h4>Email : @contact.Email</h4>
                            <h4>Date de naissance : @contact.Birthdate</h4>
                             
                            <a 
                                class="btn btn-outline-danger"
                                asp-route-id="@contact.Id"
                                asp-action="UnLoveContact">
                                J'aime pas
                            </a>
                            
                         </div>
                    </li>
                }
            }
          </ul>
    </div>

    

</div>
